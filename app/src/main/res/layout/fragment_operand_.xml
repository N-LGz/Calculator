<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Operand_Fragment">
    <LinearLayout
        android:id="@+id/OpField"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/leftrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/sept"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="7" />

                    <Button
                        android:id="@+id/huit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="8" />

                    <Button
                        android:id="@+id/neuf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="9" />

                    <Button
                        android:id="@+id/additionne"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="+" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/quatre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="4" />

                    <Button
                        android:id="@+id/cinq"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="5" />

                    <Button
                        android:id="@+id/six"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="6" />

                    <Button
                        android:id="@+id/soustrait"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="-" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/un"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="1" />

                    <Button
                        android:id="@+id/deux"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="2" />

                    <Button
                        android:id="@+id/trois"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="3" />

                    <Button
                        android:id="@+id/multiplie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="Operand"
                        android:text="*" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/zero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="Operand"
                        android:text="0" />

                    <Button
                        android:id="@+id/divise"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="Operand"
                        android:text="/" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/rightrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <Button
                    android:id="@+id/equal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="=" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>